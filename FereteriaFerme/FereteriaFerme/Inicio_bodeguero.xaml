<Window x:Class="FerreteriaFerme.Inicio_bodeguero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerreteriaFerme"
        mc:Ignorable="d"
        Title="Inicio_bodeguero" Height="450" Width="800">
    <Grid x:Name="lb_usuario">
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource ColorPrincipal}"/>
        </Grid.Background>
        <TextBlock x:Name="tb_usuario" HorizontalAlignment="Left" Margin="204,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btn_volver" Content="Cerrar Sesión" HorizontalAlignment="Left" Margin="68,358,0,0" VerticalAlignment="Top" Width="84" Click="Btn_volver_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource Bordes}"/>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
