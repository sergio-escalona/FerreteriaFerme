<Window x:Class="FerreteriaFerme.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerreteriaFerme"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource ColorPrincipal}"/>
        </Grid.Background>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="248,113,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_usuario" HorizontalAlignment="Left" Height="23" Margin="386,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="248,176,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.475,0.201"/>
        <PasswordBox x:Name="txt_contraseña" HorizontalAlignment="Left" Margin="386,182,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_ingresar" Content="Ingresar" HorizontalAlignment="Left" Margin="334,298,0,0" VerticalAlignment="Top" Width="75" Click="Btn_ingresar_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource Bordes}"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
