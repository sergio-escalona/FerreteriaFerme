<Window x:Class="FerreteriaFerme.Lista_empresa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FerreteriaFerme"
        mc:Ignorable="d"
        Title="Lista_empresa" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dtg_empresas" HorizontalAlignment="Left" Height="255" Margin="52,46,0,0" VerticalAlignment="Top" Width="698" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID_EMPRESA}" />
                <DataGridTextColumn Header="Razon social" Binding="{Binding Path=RAZON_SOCIAL}" />
                <DataGridTextColumn Header="Rut" Binding="{Binding Path=RUT_EMPRESA}" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Path=DescripcionTipo}" />
                <DataGridTextColumn Header="Correo" Binding="{Binding Path=CORREO_EMPRESA}" />
                <DataGridTextColumn Header="Cliente" Binding="{Binding Path=NombreCliente}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_volver" Content="Volver" HorizontalAlignment="Left" Margin="59,364,0,0" VerticalAlignment="Top" Width="75" Click="Btn_volver_Click"/>

    </Grid>
</Window>
